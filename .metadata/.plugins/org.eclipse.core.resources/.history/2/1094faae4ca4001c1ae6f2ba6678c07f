package default package;

import java.util.Scanner;

public class task1 {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		double discount;

		System.out.println("¬ведите сумму покупки: ");
		double price = scanner.nextDouble();

		System.out.println("¬ведите возраст покупател€: ");
		int age = scanner.nextInt();

		if (price >= 400) {
			discount = 20;
		} else if (price < 400 & price >= 300) {
			discount = 15;
		} else if (price < 300 & price >= 200) {
			discount = 12;
			if (age >= 18) {
				discount = discount + 4;
			} else {
				discount = discount - 3;
			}
		} else if (price < 200 & price >= 100) {
			discount = 7;
		} else {
			discount = 5;
		}

		System.out.println("—кидка: " + discount + "%");

		discount = price * (discount / 100);
		price = price - discount;

		System.out.println("÷ена с учЄтом скидки: $" + price);
		scanner.close();
	}
}