public boolean permutation(String x1, String y1, String z1) {
	if (x1.length() !=y1.length()) {
		return false;
	}
	int[] letters = new int[256];
	char[] x1_array = x1.toCharArray();
	for (char c : x1_array) {
		letters[c]++;
	}
	for (int i = 0; i < y1.length(); i++) {
		int c = (int) y1.charAt(i);
		if (--letters[c] < 0) {
			return false;
		}
	}
	return true;
	}
}